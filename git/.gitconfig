[user]
    # Set your name and email
    # name = Your Name
    # email = your.email@example.com

[core]
    editor = nano
    autocrlf = input
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore_global
    pager = less -FRX

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[alias]
    # Status and info
    st = status
    s = status -s

    # Committing
    co = checkout
    ci = commit
    cm = commit -m
    ca = commit -a
    cam = commit -am
    amend = commit --amend

    # Branching
    br = branch
    b = branch -v

    # Adding
    a = add
    aa = add .
    ap = add -p

    # Diffing
    d = diff
    ds = diff --staged
    dc = diff --cached

    # Logging
    l = log --oneline --graph --decorate
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    ll = log --pretty=format:'%C(yellow)%h%Cred%d %Creset%s%Cblue [%cn]' --decorate --numstat
    last = log -1 HEAD

    # Remote
    r = remote -v

    # Stashing
    sl = stash list
    sa = stash apply
    ss = stash save

    # Reset
    unstage = reset HEAD --
    uncommit = reset --soft HEAD~1

    # Finding
    find = !git ls-files | grep -i

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = false

[merge]
    tool = vimdiff

[diff]
    tool = vimdiff

[init]
    defaultBranch = main

[fetch]
    prune = true

[rebase]
    autoStash = true